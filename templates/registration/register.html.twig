{% extends 'base.html.twig' %}

{% block title %}Inscription Amiam
{% endblock %}
{% block stylesheets %}
	<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
	{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

	<!-- Font Awesome -->
	<link
	rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer"/> <!-- Axentix CSS minified version -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@2.3.0/dist/axentix.min.css">
	{{ encore_entry_link_tags('app') }}

	<link rel="stylesheet" href="{{asset('./assets/css/style.css')}}">
	<link rel="stylesheet" href="{{asset('./assets/css/baseStyle.css')}}">
	<link rel="stylesheet" href="{{asset('./assets/css/registerStyle.css')}}">

{% endblock %}

{% block body %}

	{# en cas d'erreur #}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<section class="register">
		<h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="form-field">
			<label for="pseudo">Pseudo
				<span>*</span>
			</label>
			<input name="{{ field_name(registrationForm.pseudo) }}" value="{{ field_value(registrationForm.pseudo) }}" placeholder="{{ field_label(registrationForm.pseudo) }}" class="form-control rounded-1"/>
		</div>

		<div class="form-field">
			<label for="email">E-mail
				<span>*</span>
			</label>
			<input type="email" name="{{ field_name(registrationForm.email) }}" value="{{ field_value(registrationForm.email) }}" placeholder="nom@exemple.fr" class="form-control rounded-1" autocomplete="email"/>
		</div>

		<div class="form-field">
			<label for="plainPassword">Mot de passe
				<span>*</span>
			</label>
			<input type="password" name="{{ field_name(registrationForm.plainPassword) }}" value="{{ field_value(registrationForm.plainPassword) }}" placeholder="********" class="form-control rounded-1"/>
		</div>
		<div class="cgu">

			{{ form_row(registrationForm.agreeTerms) }}
			<label for="agreeTerms"> &nbsp; Je confirme avoir lu et accepter les #DOCUMENTATION# du site Amiam.
				<span>*</span>
			</label>
		</div>
		<p>
			<span>*</span>
			Requis</p>
		<div class="groupeBtn">
			<button type="submit" class="btn btnOk">Inscription</button>
		</div>
		{{ form_end(registrationForm) }}


	</section>

{% endblock %}
