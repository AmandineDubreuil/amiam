{% extends 'base.html.twig' %}

{% block title %}Repas index{% endblock %}

{% block body %}
    <h1>Repas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repa in repas %}
            <tr>
                <td>{{ repa.id }}</td>
                <td>{{ repa.date ? repa.date|date('Y-m-d') : '' }}</td>
                <td>{{ repa.commentaire }}</td>
                <td>
                    <a href="{{ path('app_repas_show', {'id': repa.id}) }}">show</a>
                    <a href="{{ path('app_repas_edit', {'id': repa.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_repas_new') }}">Create new</a>
{% endblock %}
