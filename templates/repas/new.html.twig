													<div>{{ recette.tpsCuisson }}
														min</div>
												</div>
											{% endif %}

										</div>
									</div>
								</a>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>
		</div>
	</section>
	<section class="repas">


		{{ include('repas/_form.html.twig') }}
	</section>
{% endblock %}
